{
  "manifest_version": 3,
  "name": "Super Mouse Gesture",
  "version": "1.0.0",
  "description": "Mouse gestures and super drag for better browsing experience.",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "sessions"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

