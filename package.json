{
  "name": "super-mouse-gesture",
  "private": true,
  "version": "0.4.0",
  "type": "module",
  "description": "A Chrome Extension for mouse gestures using Manifest V3",
  "scripts": {
    "dev": "vite build && vite build -c vite.content.config.ts",
    "build": "tsc && vite build && vite build -c vite.content.config.ts",
    "preview": "vite preview",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:chromium": "playwright test --project=\"chromium\"",
    "test:e2e:edge": "playwright test --project=\"Microsoft Edge\""
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/chrome": "^0.1.32",
    "@types/node": "^25.0.2",
    "jsdom": "^27.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "vitest": "^4.0.15"
  }
}